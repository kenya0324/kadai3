<div class='container'>
  <div class='row'>
    <div class='col-xs-3'>
      <%= flash[:success] %>
   <h2>User info</h2>

   <table class="table table-striped">
    <tr>
       <th><%= attachment_image_tag @user, :profile_image, :fill,100,100, fallback: "no_image-c7305210e2d30bf8f19461ca05a151bba6413a44a35124f673246160efefdc5e.jpg" %></th>
    </tr>
    <tr>
         <th>name</th>
         <th><%= @user.name %></th>
      </tr>
      <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
      </tr>
   </table>

   <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

     <h2>New book</h2>

       <%= form_for(@books) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book" />
    <% end %>

    </div>

    <div class='col-xs-9'>
     <h2>Book detail</h2>
<table class='table table-hover table-inverse'>
  <thead>
  	  <tr>
  	  <th><%= attachment_image_tag @user, :profile_image, :fill,100,100, fallback: "no_image-c7305210e2d30bf8f19461ca05a151bba6413a44a35124f673246160efefdc5e.jpg" %><br>
        <%= link_to "#{@user.name}" , user_path(@user.id) %>
      </th>
      <th><%= @book.title %></th>
      <th><%= @book.body %></th>
      <% if @user.id == current_user.id %>
      <th><%= link_to "Edit", edit_book_path(@book.id),class:"btn-sm btn-success edit_book" %></th>
      <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn-sm btn-danger destroy_book" %><th>
      <% end %>
      </tr>
  </thead>
</table>
</div>
</div>
</div>
