<h2>User info</h2>
	 <% if @user.errors.any? %>
  <div class="alert alert-warning">
  	<ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	 <table class="table table-striped">
	 	<tr>
	 	   <th><%= attachment_image_tag @user, :profile_image, :fill,100,100, fallback: "no_image-c7305210e2d30bf8f19461ca05a151bba6413a44a35124f673246160efefdc5e.jpg" %></th>
	 	</tr>
		<tr>
	       <th>name</th>
	       <th><%= @user.name %></th>
	    </tr>
	    <tr>
	       <th>introduction</th>
	       <th><%= @user.introduction %></th>
	    </tr>
	 </table>

	 <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

     <h2>New book</h2>

       <%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Opinion</h4>
		<%= f.text_area :body %>
		<%= f.submit 'Creat book' %>
		<% end %>

    </div>